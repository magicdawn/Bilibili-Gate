{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",

  "files": {
    "ignoreUnknown": true,
    "ignore": [".vscode/", "dist/", "node_modules/"]
  },

  "linter": {
    "enabled": false
  },

  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },

  "organizeImports": {
    "enabled": true
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
