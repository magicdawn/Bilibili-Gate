{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:vite": {
      "dependsOn": [
        "build:scss"
      ],
      "env": [
        "RELEASE",
        "RELEASE_NIGHTLY",
        "MINIFY"
      ],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "vite.config.ts",
        "uno.config.ts",
        "package.json"
      ],
      "outputs": [
        "dist/bilibili-app-recommend.mini.user.js"
      ]
    },
    "build:vite-raw": {
      "dependsOn": [
        "build:scss"
      ],
      "env": [
        "RELEASE",
        "RELEASE_NIGHTLY",
        "MINIFY"
      ],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "vite.config.ts",
        "uno.config.ts",
        "package.json"
      ],
      "outputs": [
        "dist/bilibili-app-recommend.user.js"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "build:scss"
      ],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json"
      ]
    },
    "build:scss": {
      "inputs": [
        "src/**/*.scss"
      ],
      "outputs": [
        "src/**/*.scss.d.ts"
      ]
    }
  }
}
