{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "$*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "ES2022",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "tags": ["css", "cssCls", "generateClassName"]
      }
    ],
    "types": [
      "vite/client",
      "vitest/importMeta",
      "node",
      "@violentmonkey/types",
      "@total-typescript/ts-reset"
    ]
  },
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
